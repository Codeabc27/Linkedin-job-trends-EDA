#  Import modules
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from collections import Counter
from wordcloud import WordCloud
import re


# Load dataset

df_raw = pd.read_csv('../data/LinkedIn_Job_EDA_Dataset.csv')  # Replace with your path
df = df_raw.copy()  # Never modify raw data

#  Basic dataset info

print("Dataset Shape:", df.shape)
print(df.info())
print(df.head())


#  Remove duplicates

df = df.drop_duplicates()


#  Check missing values

print(df.isnull().sum())


# Data Cleaning


# Standardize column names
df.columns = [c.lower().replace(" ", "_") for c in df.columns]

# Strip & title-case job titles, companies, locations
df['job_title'] = df['job_title'].str.strip().str.title()
df['company'] = df['company'].str.strip().str.title()
df['location'] = df['location'].str.strip().str.title()

# Clean experience column
def clean_experience(exp):
    if pd.isna(exp):
        return np.nan
    if isinstance(exp, str):
        numbers = re.findall(r'\d+', exp)
        if len(numbers) == 0:
            return np.nan
        return int(numbers[0])
    if isinstance(exp, (int, float)):
        return int(exp)
    return np.nan

df['experience_years_min'] = df['experience_required'].apply(clean_experience)

# Clean salary
def clean_salary(sal):
    if pd.isna(sal):
        return np.nan
    if isinstance(sal, str):
        sal = sal.replace('LPA','').replace(' ','')
        if '-' in sal:
            nums = sal.split('-')
            return (int(nums[0]) + int(nums[1])) / 2
        return int(sal)
    return sal

df['salary_lpa'] = df['salary'].apply(clean_salary)

# Salary Band
df['salary_band'] = pd.cut(
    df['salary_lpa'],
    bins=[0,5,10,15,20,30],
    labels=['0-5','5-10','10-15','15-20','20+']
)

# Clean Date Posted
df['date_posted'] = pd.to_datetime(df['date_posted'], errors='coerce')
df = df.dropna(subset=['date_posted'])
df['year'] = df['date_posted'].dt.year
df['month'] = df['date_posted'].dt.month

# Clean skills
df['skills_list'] = df['skills'].str.split(',')
df['skills_list'] = df['skills_list'].apply(lambda x: [i.strip().title() for i in x] if isinstance(x, list) else [])

#  Save Cleaned Dataset

df.to_csv('../data/linkedin_jobs_cleaned.csv', index=False)

#  Analysis


# Job Demand
job_demand = df['job_title'].value_counts().reset_index()
job_demand.columns = ['job_title','job_count']

# Location Demand
location_demand = df['location'].value_counts().reset_index()
location_demand.columns = ['location','job_count']

# Top Companies
company_demand = df['company'].value_counts().reset_index()
company_demand.columns = ['company','job_count']

# Top Skills
all_skills = [skill for skills in df['skills_list'] for skill in skills]
skill_demand = pd.DataFrame(Counter(all_skills).items(), columns=['skill','count']).sort_values('count', ascending=False)

# Monthly Hiring Trend
monthly_trend = df.groupby(['year','month']).size().reset_index(name='job_count').sort_values(['year','month'])


#  Visualizations


# Job Demand
plt.figure(figsize=(12,6))
sns.barplot(x='job_count', y='job_title', data=job_demand.sort_values('job_count', ascending=True), palette='viridis')
plt.title('Job Demand by Role')
plt.show()

# Location Demand
plt.figure(figsize=(12,6))
sns.barplot(x='job_count', y='location', data=location_demand.sort_values('job_count', ascending=True), palette='coolwarm')
plt.title('Jobs by Location')
plt.show()

# Top Companies
plt.figure(figsize=(12,6))
top_companies = company_demand.head(10)
sns.barplot(x='job_count', y='company', data=top_companies.sort_values('job_count', ascending=True), palette='magma')
plt.title('Top Hiring Companies')
plt.show()

# Top Skills
plt.figure(figsize=(12,6))
top_skills = skill_demand.head(15)
sns.barplot(x='count', y='skill', data=top_skills.sort_values('count', ascending=True), palette='plasma')
plt.title('Top Skills in Demand')
plt.show()

# Monthly Hiring Trend
plt.figure(figsize=(14,6))
sns.lineplot(x=pd.to_datetime(monthly_trend['year'].astype(str)+'-'+monthly_trend['month'].astype(str)+'-01'),
             y='job_count', data=monthly_trend, marker='o')
plt.title('Hiring Trend Over Time')
plt.xticks(rotation=45)
plt.show()

# Skills Wordcloud
plt.figure(figsize=(12,6))
wordcloud = WordCloud(width=1000, height=400, background_color='white', colormap='viridis').generate(' '.join(all_skills))
plt.imshow(wordcloud, interpolation='bilinear')
plt.axis('off')
plt.title('Most Demanded Skills Wordcloud')
plt.show()

